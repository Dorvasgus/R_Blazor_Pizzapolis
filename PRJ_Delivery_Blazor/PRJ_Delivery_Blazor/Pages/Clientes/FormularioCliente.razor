@using PRJ_Delivery_Blazor.DTOs


<EditForm Model="@model" OnValidSubmit="@OnValidSubmit" >
    <DataAnnotationsValidator />
    <div class="container bg-white bg-opacity-75 p-5 rounded">
        <div class="form-group">
            <label for="idc">IdCliente</label>
            <InputNumber class="form-control" id="idc" @bind-Value="model.idCliente"> </InputNumber>
            <ValidationMessage For="@(() => model.idCliente)"/>
        </div>
        <div class="form-group">
            <label for="nit">Nit</label>
            <InputText class="form-control" id="Nit" @bind-Value="model.Nit" />
            <ValidationMessage For="@(() => model.Nit)" />
        </div>
        <br />
        <div class="row" >
            <div class="col-10" >
             <button type="submit" class="btn btn-primary" >Guardar</button>
            </div>
        </div>
    </div>
</EditForm>



@code {
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
    [Parameter] public ClienteInsertarDTO model { get; set; }
}
